    <script>
        $(document).ready(() => {
            const userinfo = JSON.parse(sessionStorage.getItem('userinfo'));
            console.log(userinfo)
            if (userinfo && userinfo.image) {
                $('#user-profile').html(`
                    <img class="img-profile" crossorigin="anonymous" src="${userinfo.image}" alt="User Profile" referrerpolicy="no-referrer" />
                `);
            } else {
                console.log("No user image available");
                $('#user-profile').html(`<p>No profile image available.</p>`);
            }

            get_review_qty();
            get_review_chart();
            
        });
        
        // Function to load posts from the server and display them
        function loadPosts() {
        fetch('/community/getPosts')
            .then(response => response.json())
            .then(posts => {
                const postsContainer = document.getElementById('post-container');
                postsContainer.innerHTML = '';  // Clear existing posts

                posts.forEach(post => {
                    // Format the posttime to a more readable format
                    const postTime = new Date(post.posttime).toLocaleString(); // Convert to readable format

                    postsContainer.innerHTML += `
                        <div class="container-fluid card mt-4" id="post-${post.postid}">
                            <a href="/comment/${post.postid}">
                                <p class="mt-4" style="color: #A60303; font-size: 25px;">${post.postdetail}</p>
                            </a>
                            <p class="text-muted" style="font-size: 12px;">Posted on: ${postTime}</p>
                            <div class="detail text-end">
                                <span>${post.commentCount}</span>
                                <i class="bi bi-chat comment"></i>
                            </div>
                        </div>
                    `;
                });
            })
            .catch(err => {
                console.error('Error loading posts:', err);  // Log full error
                alert('An error occurred while loading posts.');
            });
    }
    document.addEventListener('DOMContentLoaded', loadPosts);

        // Function to handle post deletion
        function deletePost(postId) {
            if (confirm("Are you sure you want to delete this post?")) {
                fetch(`/community/delete/${postId}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.message === 'Post deleted successfully.') {
                            const postElement = document.getElementById(`post-${postId}`);
                            if (postElement) {
                                postElement.remove(); // Remove the post element from the DOM
                            }
                        } else {
                            alert(`Failed to delete the post: ${data.message}`);
                        }
                    })
                    .catch(err => {
                        console.error('Error deleting post:', err);
                        alert('An error occurred while deleting the post.');
                    });
            }
        }

        // Load posts when the page is ready

